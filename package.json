{
  "name": "@mcp-ts/redis",
  "version": "1.0.0-rc.2",
  "publishConfig": {
    "access": "public"
  },
  "description": "A Lightweight MCP (Model Context Protocol) client library for JavaScript applications, supporting multiple storage backends and real-time SSE support.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.mjs",
      "require": "./dist/server/index.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.mjs",
      "require": "./dist/client/index.js"
    },
    "./client/react": {
      "types": "./dist/client/react.d.ts",
      "import": "./dist/client/react.mjs",
      "require": "./dist/client/react.js"
    },
    "./client/vue": {
      "types": "./dist/client/vue.d.ts",
      "import": "./dist/client/vue.mjs",
      "require": "./dist/client/vue.js"
    },
    "./shared": {
      "types": "./dist/shared/index.d.ts",
      "import": "./dist/shared/index.mjs",
      "require": "./dist/shared/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "npx playwright test",
    "test:ui": "npx playwright test --ui",
    "test:debug": "npx playwright test --debug"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "oauth",
    "redis",
    "sse",
    "server-sent-events",
    "serverless",
    "react",
    "hook",
    "anthropic",
    "claude"
  ],
  "author": "MCP Assistant Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zonlabs/mcp-redis.git"
  },
  "bugs": {
    "url": "https://github.com/zonlabs/mcp-redis/issues"
  },
  "homepage": "https://github.com/zonlabs/mcp-redis#readme",
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "ai": "^6.0.49",
    "ioredis": "^5.9.2",
    "json-schema": "^0.4.0",
    "nanoid": "^5.1.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@types/json-schema": "^7.0.15",
    "@types/node": "^25.0.10",
    "@types/react": "^18.3.18",
    "ioredis-mock": "^8.13.1",
    "playwright": "^1.58.0",
    "react": "^18.3.1",
    "rimraf": "^6.1.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vue": "^3.5.27"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
