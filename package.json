{
  "name": "@mcp-ts/redis",
  "version": "1.0.0-beta.9",
  "publishConfig": {
    "access": "public"
  },
  "description": "Redis-backed MCP (Model Context Protocol) client with OAuth 2.0 and real-time SSE connections for serverless environments",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.mjs",
      "require": "./dist/server/index.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.mjs",
      "require": "./dist/client/index.js"
    },
    "./shared": {
      "types": "./dist/shared/index.d.ts",
      "import": "./dist/shared/index.mjs",
      "require": "./dist/shared/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "oauth",
    "redis",
    "sse",
    "server-sent-events",
    "serverless",
    "react",
    "hook",
    "anthropic",
    "claude"
  ],
  "author": "MCP Assistant Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ashen-dusk/mcp-redis.git"
  },
  "bugs": {
    "url": "https://github.com/ashen-dusk/mcp-redis/issues"
  },
  "homepage": "https://github.com/ashen-dusk/mcp-redis#readme",
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.23.0",
    "ioredis": "^5.9.2",
    "nanoid": "^5.1.6"
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "@types/react": "^18.3.18",
    "@vitest/coverage-v8": "^4.0.18",
    "ioredis-mock": "^8.13.1",
    "react": "^18.3.1",
    "rimraf": "^6.1.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}